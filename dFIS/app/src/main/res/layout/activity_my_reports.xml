<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_reports_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".MyReportsActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--Saved AREA-->


        <LinearLayout
            android:id="@+id/Linear_SAVED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btn_lsave"
            android:background="@drawable/saved_send_lstbg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Saved Reports"
                android:textColor="#ffffff"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/textView_numItems_Saved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="0.28"
                android:gravity="right"
                android:text="0"
                android:textColor="#ffffff"

                android:textSize="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/Save_arrow"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:layout_weight="0.04"
                android:src="@mipmap/ic_up_arrow" />

            <TextView
                android:id="@+id/tv_saveupdown"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="up"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearSave_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ListView
                android:id="@+id/Reported_Incident_ListSAVED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true" />

            <TextView
                android:id="@+id/load_Saved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="btn_loadsave"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="0.28"
                android:text="Show All>>"
                android:textColor="#4f4f4f"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>


        <!--SENT AREA-->

        <LinearLayout
            android:id="@+id/Linear_SENT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btn_lsent"
            android:background="@drawable/saved_send_lstbg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Sent Reports"
                android:textColor="#ffffff"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/textView_numItems_Sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="0.28"
                android:gravity="right"
                android:text="0"
                android:textColor="#ffffff"

                android:textSize="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/Sent_arrow"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.04"
                android:src="@mipmap/ic_up_arrow" />

            <TextView
                android:id="@+id/tv_sentupdown"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="up" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearSend_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ListView
                android:id="@+id/Reported_Incident_ListSEND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"

                />

            <TextView
                android:id="@+id/load_Sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="btn_loadsent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="0.28"
                android:text="Show All>>"
                android:textColor="#4f4f4f"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
