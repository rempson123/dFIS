<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geodata.dfis.SendDamageReportViewerActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_8sdp"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/Imageview_damage"
            app:layout_constraintTop_toBottomOf="@+id/Imageview_damage">


            <ImageView
                android:id="@+id/imgV_damageSend"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgV_damageSend">

                <TextView
                    android:id="@+id/tv_damage_type_label_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:text="Damage Type:"
                    android:textColor="@color/color_tint_drawable"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_damage_address_label_sent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_damage_address_label_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:text="Address:"
                    android:textColor="@color/color_tint_drawable"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_damage_descriptpion_label_sent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_damage_type_label_sent" />

                <TextView
                    android:id="@+id/tv_damage_descriptpion_label_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:text="Description:"
                    android:textColor="@color/color_tint_drawable"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_damage_dateNTime_label_sent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_damage_address_label_sent" />

                <TextView
                    android:id="@+id/tv_damage_dateNTime_label_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:text="Date and Time:"
                    android:textColor="@color/color_tint_drawable"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_damage_name_label_sent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_damage_descriptpion_label_sent" />

                <TextView
                    android:id="@+id/tv_damage_name_label_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:text="Name:"
                    android:textColor="@color/color_tint_drawable"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_damage_contact_label_sent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_damage_dateNTime_label_sent" />

                <TextView
                    android:id="@+id/tv_damage_contact_label_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:text="Contact No:"
                    android:textColor="@color/color_tint_drawable"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_damage_id_label_sent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_damage_name_label_sent" />

                <TextView
                    android:id="@+id/tv_damage_id_label_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:text="Damage Id:"
                    android:textColor="@color/color_tint_drawable"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_damage_contact_label_sent" />


                <TextView
                    android:id="@+id/tv_damage_type_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:text="TextView"
                    app:layout_constraintBottom_toTopOf="@+id/tv_address_send"
                    app:layout_constraintStart_toEndOf="@+id/tv_damage_dateNTime_label_sent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_address_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:text="TextView"
                    app:layout_constraintBottom_toTopOf="@+id/tv_desc_send"
                    app:layout_constraintStart_toEndOf="@+id/tv_damage_dateNTime_label_sent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_damage_type_send" />

                <TextView
                    android:id="@+id/tv_desc_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:text="TextView"
                    app:layout_constraintBottom_toTopOf="@+id/tv_date_and_time_send"
                    app:layout_constraintStart_toEndOf="@+id/tv_damage_dateNTime_label_sent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_address_send" />

                <TextView
                    android:id="@+id/tv_date_and_time_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:text="TextView"
                    app:layout_constraintBottom_toTopOf="@+id/tv_full_name_send"
                    app:layout_constraintStart_toEndOf="@+id/tv_damage_dateNTime_label_sent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc_send" />

                <TextView
                    android:id="@+id/tv_full_name_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:text="TextView"
                    app:layout_constraintBottom_toTopOf="@+id/tv_contact_no_send"
                    app:layout_constraintStart_toEndOf="@+id/tv_damage_dateNTime_label_sent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date_and_time_send" />

                <TextView
                    android:id="@+id/tv_contact_no_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:text="TextView"
                    app:layout_constraintBottom_toTopOf="@+id/tv_damage_id_send"
                    app:layout_constraintStart_toEndOf="@+id/tv_damage_dateNTime_label_sent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_full_name_send" />

                <TextView
                    android:id="@+id/tv_damage_id_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:text="TextView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_damage_dateNTime_label_sent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contact_no_send" />

                <TextView
                    android:id="@+id/tv_dmgReportNoSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>