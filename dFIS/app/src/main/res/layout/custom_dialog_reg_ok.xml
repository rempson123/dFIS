<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/dialog_reg_complete"
        android:background="#ffff">

        <TextView
            android:text="Registration Complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:textSize="@dimen/_8sdp"
            android:textColor="#000"
            />

        <TextView
            android:text="Check your email and/or mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_weight="0.23"
            android:layout_gravity="center"
            android:textSize="@dimen/_8sdp"
            android:textColor="#000"/>

        <TextView
            android:text="to verify your account."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_8sdp"
            android:textColor="#000"/>

        <Button
            android:layout_marginTop="@dimen/_8sdp"
            android:text="OK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_ok"
            android:background="@drawable/button_bg_regcomplete"
            android:textColor="#01A299"
            android:textSize="@dimen/_10sdp"/>
    </LinearLayout>
</LinearLayout>